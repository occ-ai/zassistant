{
  "name": "zassistant",
  "displayName": "中文编程助手",
  "description": "自动中文符号转英文符号。和原生英文符号输入无异。",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.93.0"
  },
  "publisher": "OccAI",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/occ-ai/zassistant"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "中文",
    "中文编程",
    "中文编程助手",
    "中英转换",
    "中英符号转换",
    "occai",
    "py",
    "python",
    "chinese",
    "汉化",
    "ai"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "images/logo.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "occai.zassistant",
        "title": "中英文符号自动转换"
      },
      {
        "command": "extension.translateTerminal",
        "title": "翻译终端"
      }
    ],
    "configuration": {
      "title": "My Extension Settings",
      "properties": {
        "zassistant.enableSpaceAccept": {
          "type": "boolean",
          "default": false,
          "description": "是否启用空格键接受补全。"
        },
        "zassistant.enable": {
          "type": "boolean",
          "default": true,
          "description": "使用启用中英文符号自动转换"
        }
      }
    },
    "keybindings": [
      {
        "key": "space",
        "command": "acceptSelectedSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible && suggestionMakesTextEdit && config.zassistant.enableSpaceAccept",
        "mac": "space",
        "linux": "space",
        "win": "space"
      }
    ],
    "menus": {
      "terminal/title": [
        {
          "command": "extension.translateTerminal",
          "when": "terminalFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package1": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "openai": "^6.8.1"
  }
}